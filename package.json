{
  "name": "omnicast-dashboard",
  "version": "1.0.0",
  "description": "OmniCast — Hub multimédia integrado com IPTV, Webcams, VOD, Rádio e muito mais.",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "husky install .husky",
    "dev": "vite dev --port 5500",
    "watch:schema": "node scripts/watchSchema.js",
    "dev:full": "npm-run-all --parallel watch:schema dev",
    "build": "vite build",
    "preview": "vite preview --port 5500",
    "serve": "npm run preview",
    "start": "npm run preview",
    "generate:adapter": "plop adapter",
    "lint:js": "eslint \"frontend/js/**/*.js\" --fix",
    "lint:css": "stylelint \"frontend/assets/css/**/*.css\" --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "test": "npm run test:unit",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests --coverage",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js \"tests/integration/**/*.test.js\"",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "docker:build": "docker build -t omnicast-dashboard ./docker",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chart.js": "^4.5.0",
    "hls.js": "^1.6.12",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "puppeteer": "^24.20.0",
    "video.js": "^8.23.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "concurrently": "^9.2.1",
    "cypress": "^15.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "plop": "^3.0.0",
    "prettier": "^3.6.2",
    "replace-in-file": "^8.3.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "serve": "^14.2.5",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "25.0.0",
    "vite": "^7.1.5",
    "vite-plugin-pwa": "^1.0.3"
  }
}
